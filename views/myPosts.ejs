<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Posts</title>
   
        <!--Css File's location in public folder-->
        <link rel="stylesheet" type="text/css" href="/style.css"> 
        <link href="https://fonts.googleapis.com/css?family=Cardo:400,700|Oswald" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Homemade+Apple&display=swap" rel="stylesheet">

    </head>

    <body>

            <div class="header">

                    <a href="#default" class="logo">Our Communicator</a>
                    <div class="header-right">
                      <a  href="/home">Main</a>
                      <a href="/chat">Chat</a>
                      <a class="active" href="/myPosts">My Posts</a>
                      <a href="/contact">Contact</a>
                      <a id="logout" href="/logout">Logout</a>
                    </div>
            </div>
 
            <br><br>

            <%if(email!=null){%>


            <h1 style="text-align: center">Your Posts</h1>




        <% var count=0; posst.forEach(function(possta) { if(possta.email == email ){ count++;%>

            <div class="flex-containerMain centerPost" style="flex-basis: 100px; background-image: url('/images/skyy.jpg') ;height: auto; border-radius: 25px; border: 5px solid rgb(111, 186, 236); margin-top: 100px">
                <div style="margin-top: 7px; font-family: 'Cardo', serif;">User: You</div><br>

                <div class="flex-containerMain" style="background-image: url('/images/foldedPaper.jpg') ; height: 240px; border-radius: 25px; margin: 0 8px 0 8px">
                    <div style="flex-basis: 200px; margin-top: 10px; font-size: 40px; font-family: 'Homemade Apple', cursive;"  ><%=  possta.postText %></div>
                    <!--<div><%=  possta.email %></div>-->
                    <div class="flex-containerBottom" style="margin-bottom: 4px;">

                        <% var viewProfile="/viewProfile/" +possta.email%>

                            <div style="flex-basis: 900px; text-align: left; margin-left: 25px; font-family: 'Cardo', serif;">By <a href=<%= viewProfile %> ><%=  possta.email %></a></div>
                            <div style="margin-left: 120px; font-family: 'Cardo', serif;">Post Created at: <%=  possta.date %></div>

                    </div>
                </div>

                <div>

                    
                <div  style="margin-top: 10px;" class="flex-container">

                    <div  style=" float: left; text-align: center; margin-left: 20px; margin-top: 10px;">
                        <span style=" float: left;" id="value<%=possta._id%>"><%=possta.wows %></span>&nbsp Wows
                    </div><div style="width: 70%";></div>

                    <% var commCount=0; possta.comments.forEach(function(comments){ commCount++;});%>

                    <div style="float: right; text-align: right; margin-right: 40px;"><%=commCount%> Comments <button id="<%=possta._id%>com" onclick="loadComments(this)" class="button button2">Show Comments</button></div> 
                </div>

            </div>

            <div class="flex-container" id="commentDiv<%=possta._id%>"style="margin-bottom: 4px; height: auto; display: none; border: 5px solid rgb(111, 186, 236); border-radius: 25px; margin: 2px 8px 0 8px">

                    <% possta.comments.forEach(function(comments){ %>

                    <div class="flex-containerBottom" style="overflow: auto;" >
                        <div style="flex-basis: 340px; text-align: left; margin-left: 25px; font-family: 'Cardo', serif;">By <a href="/viewProfile/<%=comments.email%>"><%if(comments.email == email){%>You<%}else{%><%=comments.name%><%}%></a></div>
                        <div style="flex-basis: 400px; text-align: left; margin-left: 25px; font-family: 'Cardo', serif;">Comment : <%=comments.comment%></div>
                        <div style="margin-left: 120px; font-family: 'Cardo', serif;">at: <%=comments.date %></div>
                    </div><hr>
                    <%});%>

                    <%if(commCount == 0){%>
                        <div class="flex-container" style="overflow: auto;" >
                            <div style="flex-basis: 340px; text-align: center; margin-left: 25px; font-family: 'Cardo', serif;">No comments to show</a></div>
                            
                        </div><hr>
                    <%}%>

                    
                    <div class="flex-containerBottom" style="justify-content: center;">    
                            <div style="flex-basis: 600px; font-family: 'Cardo', serif;"><form action="/home/comment/<%=possta._id%>" method="post"><input type="text" name="comment" required/></div>
                            <div style="margin-left: 70px; font-family: 'Cardo', serif;"><input type="submit" value="Reply" id="comment<%=possta._id%>"/></form></div>
                    </div>

                </div>
            </div>
        
       <% }}) %>

       <% if(count == 0){ %>
        <div><br><br>
            <div class="centerPost" style="font-size:30px;  margin-top: 7px; font-family: 'Cardo', serif;">No posts Posted by You!</div><br>
        </div>
        <% } %>



       <div style="margin-bottom: 100px"></div>

       <%}else{%>
        <div><script>window.document.location = "http://localhost:5000/login";</script>
        </div>
        <%}%>

       <div class="footer" style="position: fixed">
            <p>Copyrights reserved</p>
          </div>
            
    </body>

</html>

<script>
    

    function loadComments(comm){
        var idCommentStore= comm.id;
        var newStr = idCommentStore.slice(0, -3);
        var buttonValuee=document.getElementById(idCommentStore).innerHTML;
        var commentId= "commentDiv" +newStr;

        if(buttonValuee== "Show Comments"){
            
            document.getElementById(commentId).style.display= "table";
            document.getElementById(idCommentStore).innerHTML= "Hide Comments"
        }
        else{
            commentId= "commentDiv" +newStr;
            document.getElementById(commentId).style.display= "none";
            document.getElementById(idCommentStore).innerHTML= "Show Comments"
        }

    }

</script>
