<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Chat</title>

        <meta name="viewport" content="width=device-width, initial-scale=1" />
   
        <!--Css File's location in public folder-->
        <link rel="stylesheet" type="text/css" href="/style.css"> 
        <link href="https://fonts.googleapis.com/css?family=Cardo:400,700|Oswald" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Homemade+Apple&display=swap" rel="stylesheet">

    </head>

    <body>

            <div class="header">

                    <a href="#default" class="logo">Our Communicator</a>
                    <div class="header-right">
                      <a href="/home">Main</a>
                      <a class="active" href="/chat">Chat</a>
                      <a href="/myPosts">My Posts</a>
                      <a href="/contact">Contact</a>
                      <a id="logout" href="/logout">Logout</a>
                    </div>
            </div>

        <%if(name!=null){%>

        <h1>Select User's profile to Start Chat</h1>
        
        <% var count=0; person.forEach(function(details) { if(details.email != email){ count++;%>

            <div class="flex-containerMain centerPost" style="flex-basis: 100px; background-image: url('/skyy.jpg') ;height: auto; border-radius: 25px; border: 5px solid rgb(111, 186, 236); margin-top: 50px">
                <div style="font-size:25px;  margin-top: 3px; font-family: 'Cardo', serif;">User's Name: <a href="/startChatting/<%=details.email%>/<%=details.name%>"><%= details.name %></a></div><br>
                <div style="margin-top: 3px; font-family: 'Cardo', serif;">Email Id: <%= details.email %></div>
            </div>
        
       <% }}) %>

        <%if(count == 0){ %>
            <div class="flex-containerMain" style="flex-basis: 100px; background-image: url('/skyy.jpg') ;height: 140px; border-radius: 25px; border: 5px solid rgb(111, 186, 236); margin-top: 100px">
                <div style="font-size:30px;  margin-top: 7px; font-family: 'Cardo', serif;">No users available to chat!</div><br>
            </div>

        <% }%>


       <div style="margin-bottom: 100px"></div>

       <%}else{%>
        <div><script>window.document.location = "http://our-communicator.herokuapp.com/login";</script>
        </div>
        <%}%>

       <div class="footer" style="position: fixed">
            <p>Copyrights reserved</p>
          </div>
            
    </body>

</html>

